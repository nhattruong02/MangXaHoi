<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu_bv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_menu_bv" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_dong_bv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/spcr"
            app:civ_border_color="@color/cardview_shadow_start_color"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txt_ten_dong_bv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img_avatar_dong_bv"
            android:text="Mai Nhật Trường"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tg_bv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ten_dong_bv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_avatar_dong_bv"
            android:text="Hôm qua"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/txt_nd_dong_bv"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_anh_dong_bv"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_like"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_like"
            android:layout_width="35dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_sllike"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"/>
        <ImageView
            android:id="@+id/img_binh_luan"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_comment"
            android:layout_width="35dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_slbl"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>