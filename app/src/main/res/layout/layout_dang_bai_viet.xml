<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_quay_lai_bv"
            android:layout_margin="10dp"
            android:src="@drawable/ic_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Đăng bài viết"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/btn_dang_bv"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="60dp"
            android:text="Đăng"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_dang_bv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="Hãy ghi tiêu đề gì đó cho bài viết này ..."
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/img_them_anh_bv"
        android:layout_margin="2dp"
        android:src="@drawable/ic_photo"
        android:layout_width="65dp"
        android:layout_height="50dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_anh_bv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>