<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="500dp">

    <TextView
        android:layout_margin="20dp"
        android:textColor="#51c9be"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Tạo nhóm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/ic_photo"
        app:civ_border_color="@color/cardview_shadow_start_color"
        app:civ_border_width="2dp"
        android:id="@+id/img_dialog_tao_nhom"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <EditText
        android:background="@drawable/custom_edittext"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_ten_tao_nhom"
        android:textSize="30dp"
        android:hint="Tên nhóm"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/custom_edittext"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_mo_ta_tao_nhom"
        android:textSize="30dp"
        android:hint="Mô tả"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <Button
            android:textColor="@color/white"
            android:id="@+id/btntaonhom"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Tạo"/>

        <Button
            android:textColor="@color/white"
            android:id="@+id/btnhuytaonhom"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:text="Huỷ" />
    </LinearLayout>
</LinearLayout>