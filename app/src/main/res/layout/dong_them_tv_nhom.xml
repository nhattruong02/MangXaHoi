<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/cardview_shadow_start_color"
            app:civ_border_width="2dp"
            android:id="@+id/img_dong_them_tv_nhom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/spcr" />

        <TextView
            android:id="@+id/txtten_dong_them_tv_nhom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img_dong_them_tv_nhom"
            android:text="Mai Nhật Trường"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_dong_them_tv_nhom"
            android:layout_width="200dp"
            android:text="Thêm vào nhóm"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtten_dong_them_tv_nhom"
            android:layout_toRightOf="@id/img_dong_them_tv_nhom" />
</RelativeLayout>